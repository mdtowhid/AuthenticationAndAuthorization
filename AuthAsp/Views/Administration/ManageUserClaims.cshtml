@model UserClaimsViewModel
@{
    ViewData["Title"] = "ManageUserClaims";
}




<form method="post">
    <div class="card">
        <div class="card-header">User Claims.</div>
        <div class="card-body">
            @for (int i = 0; i < Model.Claims.Count; i++)
            {
                <div class="form-check m-1">
                    <input type="hidden" asp-for="@Model.Claims[i].ClaimType"/>
                    <input asp-for="@Model.Claims[i].IsSelected" class="form-check-input"/>
                    <label asp-for="@Model.Claims[i].IsSelected" class="form-check-label">
                        @Model.Claims[i].ClaimType
                    </label>
                </div>
            }
        </div>
        <div class="card-footer">
            <input type="submit" value="Update"/>
            <a asp-action="EditUser"
               asp-controller="Administration"
               asp-route-userId="@Model.UserId">Cancel</a>
        </div>

    </div>
</form>



